/* 导入统一色彩规范 */
@import './styles/theme.wxss';

/* 全局样式 - 响应式布局 */
page {
  /* 旧版颜色变量映射（向后兼容） */
  --primary-color: var(--primary);
  --primary-light: var(--primary-light);
  --secondary-color: var(--success);
  --warning-color: var(--warning);
  --danger-color: var(--error);
  --text-main: var(--gray-1);
  --text-secondary: var(--gray-2);
  --text-muted: var(--gray-3);
  --bg-body: var(--gray-7);
  --bg-card: var(--gray-8);
  --border-color: var(--gray-5);
  
  /* 响应式布局 */
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

/* 全局盒模型 - 应用到常用元素 */
view, text, image, button, input, textarea, scroll-view {
  box-sizing: border-box;
}

/* 通用容器 - 响应式 */
.container {
  width: 100%;
  padding: var(--space-lg);
  box-sizing: border-box;
}

.page-container {
  width: 100%;
  min-height: 100vh;
  background-color: var(--gray-7);
  padding-bottom: var(--space-2xl);
  box-sizing: border-box;
  overflow-x: hidden;
}

/* 卡片样式 - 响应式 */
.card {
  width: 100%;
  background-color: var(--gray-8);
  border-radius: var(--radius-lg);
  padding: var(--space-lg);
  margin-bottom: var(--space-lg);
  box-shadow: var(--shadow-1);
  transition: box-shadow var(--transition-base);
  box-sizing: border-box;
}

.card:active {
  box-shadow: var(--shadow-2);
}

/* 按钮样式 - 使用新规范 + 响应式 */
.btn-primary {
  background: var(--primary);
  color: var(--gray-8);
  border: none;
  border-radius: var(--radius-round);
  padding: 24rpx 48rpx;
  font-size: var(--font-lg);
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-fast);
  line-height: 1;
  white-space: nowrap;
  box-sizing: border-box;
}

.btn-primary:active {
  background: var(--primary-dark);
  transform: scale(0.98);
}

.btn-primary:disabled {
  background: var(--gray-4);
  opacity: 0.6;
}

.btn-secondary {
  background: var(--gray-6);
  color: var(--gray-1);
  border: none;
  border-radius: var(--radius-round);
  padding: 24rpx 48rpx;
  font-size: var(--font-lg);
  font-weight: 500;
  transition: all var(--transition-fast);
}

.btn-secondary:active {
  background: var(--gray-5);
  transform: scale(0.98);
}

.btn-outline {
  background: transparent;
  color: var(--primary);
  border: 2rpx solid var(--primary);
  border-radius: var(--radius-round);
  padding: 22rpx 46rpx;
  font-size: var(--font-lg);
  font-weight: 500;
  transition: all var(--transition-fast);
}

.btn-outline:active {
  background: var(--primary-lighter);
  transform: scale(0.98);
}

/* 列表样式 */
.list-item {
  background-color: var(--bg-card);
  padding: 32rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.list-item:last-child {
  border-bottom: none;
}

.list-item-content {
  flex: 1;
}

.list-item-title {
  font-size: 32rpx;
  color: var(--text-main);
  font-weight: 500;
  margin-bottom: 8rpx;
}

.list-item-desc {
  font-size: 26rpx;
  color: var(--text-muted);
}

/* 状态标签 - 使用新规范 */
.status-tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: var(--radius-xs);
  font-size: var(--font-sm);
  font-weight: 500;
  line-height: 1;
}

.status-pending {
  color: var(--warning-dark);  /* ✅ 使用深色确保对比度 */
  background: var(--warning-light);
  font-weight: 500;
}

.status-accepted {
  color: var(--primary-dark);  /* ✅ 使用深色确保对比度 */
  background: var(--info-light);
  font-weight: 500;
}

.status-completed {
  color: var(--success-dark);  /* ✅ 使用深色确保对比度 */
  background: var(--success-light);
  font-weight: 500;
}

.status-cancelled {
  color: var(--gray-1);  /* ✅ 使用最深色确保对比度 */
  background: var(--gray-6);
  font-weight: 500;
}

