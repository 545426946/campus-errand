<view class="search-bar-container {{customClass}}">
  <!-- æœç´¢æ¡† -->
  <view class="search-input-wrapper">
    <input 
      class="search-input" 
      placeholder="{{placeholder}}"
      value="{{value}}"
      bindinput="onInput"
      bindconfirm="onSearch"
      bindfocus="onFocus"
      bindblur="onBlur"
      maxlength="{{maxLength}}"
      disabled="{{disabled}}"
    />
    
    <!-- æ¸…é™¤æŒ‰é’® -->
    <view 
      class="clear-btn" 
      wx:if="{{value && showClear && !disabled}}" 
      bindtap="onClear"
    >
      <text class="clear-icon">Ã—</text>
    </view>
    
    <!-- æœç´¢æŒ‰é’® -->
    <view 
      class="search-btn {{showSearchButton ? '' : 'hidden'}}" 
      bindtap="onSearch"
    >
      <text class="search-icon">ğŸ”</text>
    </view>
  </view>
  
  <!-- æœç´¢å»ºè®® -->
  <view class="search-suggestions" wx:if="{{showSuggestions && suggestions.length > 0}}">
    <view 
      class="suggestion-item" 
      wx:for="{{suggestions}}" 
      wx:key="index"
      bindtap="onSuggestionTap"
      data-value="{{item}}"
    >
      <text class="suggestion-text">{{item}}</text>
    </view>
  </view>
  
  <!-- æœç´¢å†å² -->
  <view class="search-history" wx:if="{{showHistory && searchHistory.length > 0 && !value}}">
    <view class="history-header">
      <text class="history-title">æœç´¢å†å²</text>
      <text class="history-clear" bindtap="onClearHistory">æ¸…ç©º</text>
    </view>
    <view class="history-list">
      <text 
        class="history-item" 
        wx:for="{{searchHistory}}" 
        wx:key="index"
        bindtap="onHistoryTap"
        data-value="{{item}}"
      >
        {{item}}
      </text>
    </view>
  </view>
</view>