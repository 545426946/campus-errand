/* 关于我们页面样式 */
page {
  background-color: #f8f8f8;
}

.page-container {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 应用信息 */
.app-info-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.2);
  text-align: center;
}

.app-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
}

.app-logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.app-title {
  text-align: center;
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  opacity: 0.8;
}

.app-description {
  font-size: 28rpx;
  line-height: 1.6;
  opacity: 0.9;
}

/* 特色功能 */
.features-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.features-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
}

.feature-item {
  flex: 1;
  min-width: 300rpx;
  text-align: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.feature-icon {
  font-size: 48rpx;
  display: block;
  margin-bottom: 16rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 联系我们 */
.contact-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 4rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.copy-icon,
.arrow-icon {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.arrow-icon {
  background: transparent;
}

/* 相关政策 */
.policy-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.policy-list {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.policy-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.policy-item:last-child {
  border-bottom: none;
}

.policy-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.policy-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

/* 版本信息 */
.version-section {
  text-align: center;
  padding: 40rpx 20rpx;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.copyright {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.version-text {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 24rpx;
}

.update-btn {
  background: #007aff;
  color: white;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  border: none;
  outline: none;
}