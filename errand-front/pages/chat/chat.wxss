.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 订单信息栏 */
.order-info-bar {
  background-color: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-info-content {
  flex: 1;
}

.order-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.order-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.order-status {
  display: flex;
  align-items: center;
  color: #999;
}

.status-text {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.arrow {
  font-size: 32rpx;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 40rpx;
}

.message-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

/* 对方的消息 */
.message-item.other .message-wrapper {
  flex-direction: row;
}

.message-item.other .message-content {
  align-items: flex-start;
}

.message-item.other .message-bubble {
  background-color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-item.other .sender-name {
  text-align: left;
}

.message-item.other .message-time {
  text-align: left;
}

/* 我的消息 */
.message-item.mine .message-wrapper {
  flex-direction: row-reverse;
}

.message-item.mine .message-content {
  align-items: flex-end;
}

.message-item.mine .message-bubble {
  background-color: #95ec69;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.message-item.mine .sender-name {
  text-align: right;
}

.message-item.mine .message-time {
  text-align: right;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
}

.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  max-width: 550rpx;
}

.sender-name {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  padding: 0 8rpx;
}

.message-bubble {
  max-width: 100%;
  padding: 24rpx;
  border-radius: 12rpx;
  word-wrap: break-word;
  word-break: break-word;
}

.message-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.message-time {
  font-size: 20rpx;
  color: #bbb;
  margin-top: 8rpx;
  padding: 0 8rpx;
}

/* 输入框 */
.input-bar {
  background-color: white;
  padding: 20rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.cancel-btn {
  background-color: #ff6b6b;
  color: white;
  border: none;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

.message-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.send-btn {
  background-color: #07c160;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}
