.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 订单信息栏 */
.order-info-bar {
  background-color: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-info-content {
  flex: 1;
}

.order-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.order-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.order-status {
  display: flex;
  align-items: center;
  color: #999;
}

.status-text {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.arrow {
  font-size: 32rpx;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message-item {
  margin-bottom: 32rpx;
  width: 100%;
}

.message-wrapper {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  width: 100%;
  flex-direction: row;  /* 所有消息都左对齐 */
}

/* 对方的消息 - 白色气泡 */
.message-item.other .message-content {
  align-items: flex-start;
}

.message-item.other .message-bubble {
  background-color: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.message-item.other .sender-name {
  text-align: left;
}

.message-item.other .message-time {
  text-align: left;
}

/* 我的消息 - 蓝色气泡 */
.message-item.mine .message-content {
  align-items: flex-start;
}

.message-item.mine .message-bubble {
  background-color: #e3f2fd;  /* 浅蓝色 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.message-item.mine .sender-name {
  text-align: left;
  color: #1976d2;  /* 深蓝色 */
}

.message-item.mine .message-time {
  text-align: left;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
  object-fit: cover;
}

.message-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  max-width: calc(100% - 100rpx);
  min-width: 0;
}

.sender-name {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  padding: 0 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.message-bubble {
  display: inline-block;
  max-width: 100%;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  word-wrap: break-word;
  word-break: break-word;
  position: relative;
}

.message-text {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  white-space: pre-wrap;
}

.message-time {
  font-size: 22rpx;
  color: #bbb;
  margin-top: 8rpx;
  padding: 0 8rpx;
  white-space: nowrap;
}

/* 输入框 */
.input-bar {
  background-color: white;
  padding: 20rpx;
  border-top: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.cancel-btn {
  background-color: #ff6b6b;
  color: white;
  border: none;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.message-input {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 24rpx 32rpx;
  font-size: 30rpx;
  line-height: 1.5;
  min-height: 80rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.message-input:focus {
  background-color: white;
  border-color: #07c160;
}

.message-input::placeholder {
  color: #999;
  font-size: 28rpx;
}

.send-btn {
  background-color: #07c160;
  color: white;
  border: none;
  padding: 24rpx 48rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
  transition: all 0.3s;
}

.send-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.2);
}
