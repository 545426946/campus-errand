.chat-list-container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.chat-list {
  padding: 0;
}

.chat-item {
  display: flex;
  padding: 24rpx 30rpx;
  background-color: white;
  border-bottom: 1rpx solid #e0e0e0;
}

.chat-item:active {
  background-color: #f8f8f8;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
}

.chat-content {
  flex: 1;
  min-width: 0;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.chat-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.last-message {
  font-size: 28rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  flex: 1;
}

.unread-badge {
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  background-color: #ff4444;
  color: white;
  font-size: 20rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-left: 16rpx;
}

.order-title {
  font-size: 24rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

.loading-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx;
  color: #999;
}
