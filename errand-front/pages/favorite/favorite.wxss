/* 收藏夹页面样式 */
page {
  background-color: #f8f8f8;
}

.page-container {
  padding: 20rpx;
}

/* 统计卡片 */
.stats-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.stats-item {
  flex: 1;
  text-align: center;
}

.stats-number {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

.stats-divider {
  width: 1rpx;
  height: 40rpx;
  background: #e5e5e5;
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: white;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.filter-tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-tab.active {
  background: #007aff;
  color: white;
  font-weight: 600;
}

/* 收藏列表 */
.favorite-list {
  margin-bottom: 20rpx;
}

.favorite-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
}

.item-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.status-pending {
  background: #fff3cd;
  color: #856404;
}

.status-accepted {
  background: #cce5ff;
  color: #004085;
}

.status-completed {
  background: #d4edda;
  color: #155724;
}

.status-cancelled {
  background: #f8d7da;
  color: #721c24;
}

.item-content {
  margin-bottom: 24rpx;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
  margin-bottom: 16rpx;
}

.item-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-info {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.price {
  font-size: 36rpx;
  font-weight: 700;
  color: #ff4757;
}

.price-label {
  font-size: 22rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: none;
  outline: none;
}

.action-btn.contact {
  background: #f8f9fa;
  color: #495057;
  border: 1rpx solid #dee2e6;
}

.action-btn.accept {
  background: #007aff;
  color: white;
}

.remove-favorite {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 8rpx 12rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  opacity: 0;
  transition: opacity 0.3s;
}

.favorite-item:hover .remove-favorite {
  opacity: 1;
}

.remove-icon {
  font-size: 24rpx;
}

.remove-text {
  font-size: 22rpx;
  color: #666;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  background: white;
  border-radius: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  display: block;
  margin-bottom: 40rpx;
}

.go-browse-btn {
  background: #007aff;
  color: white;
  border-radius: 32rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx;
  background: white;
  border-radius: 16rpx;
  margin-top: 20rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #999;
}