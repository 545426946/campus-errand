/* 反馈历史页面样式 */
page {
  background-color: #f8f8f8;
  padding-bottom: 100rpx;
}

.page-container {
  min-height: 100vh;
}

/* 统计卡片 */
.stats-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 24rpx;
  text-align: center;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
}

/* 反馈列表 */
.feedback-list {
  padding: 0 20rpx 20rpx;
}

.feedback-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.feedback-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 头部信息 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.type-badge,
.status-badge {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.type-icon,
.status-icon {
  margin-right: 6rpx;
}

.type-name,
.status-name {
  font-weight: 500;
}

/* 标题 */
.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

/* 内容预览 */
.item-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 图片预览 */
.item-images {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.preview-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

.image-count {
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

/* 回复信息 */
.item-reply {
  background: #f0f9ff;
  border-left: 4rpx solid #007aff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.reply-label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #007aff;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.reply-icon {
  margin-right: 8rpx;
}

.reply-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 底部信息 */
.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-id {
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text,
.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}

/* 悬浮按钮 */
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  z-index: 100;
  transition: all 0.3s;
}

.fab-button:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 48rpx;
}
