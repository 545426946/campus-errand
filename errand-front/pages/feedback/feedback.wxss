/* 意见反馈页面样式 */
page {
  background-color: #f8f8f8;
}

.page-container {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 反馈类型选择 */
.type-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.type-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-item {
  flex: 1;
  min-width: 160rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  border: 2rpx solid #f0f0f0;
  transition: all 0.3s;
}

.type-item.selected {
  border-color: #007aff;
  background: #f0f9ff;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
}

.type-name {
  font-size: 26rpx;
  color: #666;
}

.type-item.selected .type-name {
  color: #007aff;
  font-weight: 600;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #ff4757;
  margin-right: 4rpx;
}

.input-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 24rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  box-sizing: border-box;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #007aff;
  background: #fff;
}

.form-input::placeholder {
  color: #999;
  font-size: 26rpx;
}

.placeholder-text {
  color: #999;
  font-size: 26rpx;
}

.form-input.error {
  border-color: #ff4757;
  background: #fff5f5;
}

.form-textarea {
  width: 100%;
  min-height: 180rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fafafa;
  line-height: 1.8;
  box-sizing: border-box;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #007aff;
  background: #fff;
}

.form-textarea::placeholder {
  color: #999;
  font-size: 26rpx;
  line-height: 1.6;
}

.form-textarea.error {
  border-color: #ff4757;
  background: #fff5f5;
}

.error-text {
  font-size: 24rpx;
  color: #ff4757;
  margin-top: 8rpx;
  display: block;
}

.char-count {
  font-size: 22rpx;
  color: #999;
  text-align: right;
  margin-top: 8rpx;
  display: block;
}

/* 图片上传 */
.image-upload {
  margin-top: 16rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #d1d5db;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f9fafb;
  transition: all 0.3s;
}

.upload-btn.disabled {
  border-color: #e5e5e5;
  background: #f8f8f8;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #666;
}

.upload-desc {
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

/* 提交区域 */
.submit-section {
  margin-bottom: 30rpx;
}

.submit-btn {
  width: 100%;
  padding: 28rpx;
  background: #007aff;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  outline: none;
}

.submit-btn.loading {
  background: #94a3b8;
}

.submit-btn[disabled] {
  background: #94a3b8;
}

.action-links {
  text-align: center;
  margin-top: 20rpx;
}

.link-text {
  font-size: 26rpx;
  color: #007aff;
}

/* 温馨提示 */
.tips-section {
  background: #f0f9ff;
  border-radius: 12rpx;
  padding: 24rpx;
  border-left: 4rpx solid #007aff;
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tips-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #007aff;
}

.tips-list {
  padding-left: 40rpx;
}

.tips-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 8rpx;
  display: block;
}