/* 订单历史页面样式 */
page {
  background-color: #f8f8f8;
  padding-bottom: 100rpx;
}

.page-container {
  min-height: 100vh;
}

/* 统计卡片 */
.stats-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.stats-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 24rpx;
  text-align: center;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
}

/* 标签切换 */
.tabs-section {
  padding: 20rpx;
}

.tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-radius: 8rpx;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab.active {
  background: #007aff;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
}

.tab.active .tab-text {
  color: white;
  font-weight: 600;
}

.tab-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
}

.tab.active .tab-count {
  color: rgba(255, 255, 255, 0.8);
}

/* 订单列表 */
.order-list {
  padding: 0 20rpx 20rpx;
}

.order-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.order-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.order-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
  margin-right: 20rpx;
}

.status-badge {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.status-icon {
  margin-right: 6rpx;
}

.status-name {
  font-weight: 500;
}

/* 订单内容 */
.order-content {
  margin-bottom: 20rpx;
}

.content-row {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.content-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  flex-shrink: 0;
}

.value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 订单底部 */
.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4757;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text,
.no-more-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  line-height: 1.6;
}
