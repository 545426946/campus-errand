.container {
  padding: 40rpx;
}

.section {
  margin-bottom: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.value {
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.test-btn {
  margin-bottom: 20rpx;
  background: #007aff;
  color: white;
}

.result-box {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  max-height: 600rpx;
  overflow-y: scroll;
}

.result {
  font-size: 24rpx;
  color: #333;
  word-break: break-all;
  white-space: pre-wrap;
}
