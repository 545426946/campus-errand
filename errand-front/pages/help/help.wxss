/* 帮助中心页面样式 */
page {
  background-color: #f8f8f8;
}

.page-container {
  padding: 20rpx;
  padding-bottom: 100rpx;
}

/* 搜索栏 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  background: white;
  border-radius: 32rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 24rpx;
  color: #999;
  padding: 8rpx;
}

/* 搜索结果 */
.search-results {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.result-header {
  margin-bottom: 12rpx;
}

.result-category {
  font-size: 22rpx;
  color: #007aff;
  display: block;
  margin-bottom: 8rpx;
}

.result-title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
}

.result-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 分类内容 */
.content-section {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 分类标签 */
.category-tabs {
  display: flex;
  background: #f8f9fa;
  padding: 8rpx;
}

.category-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.category-tab.active {
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #666;
}

.category-tab.active .tab-text {
  color: #007aff;
  font-weight: 600;
}

/* 帮助列表 */
.help-list {
  padding: 20rpx;
}

.help-item {
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  overflow: hidden;
  transition: all 0.3s;
}

.help-item.expanded {
  background: white;
  border: 1rpx solid #e9ecef;
}

.help-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
}

.help-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
}

.expand-icon {
  font-size: 24rpx;
  color: #999;
  transition: transform 0.3s;
}

.expand-icon.expanded {
  transform: rotate(180deg);
}

.help-content {
  padding: 0 24rpx 24rpx;
  border-top: 1rpx solid #e9ecef;
}

.help-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* 联系客服 */
.contact-section {
  text-align: center;
  padding: 60rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.contact-title {
  font-size: 32rpx;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.contact-btn {
  background: #007aff;
  color: white;
  border-radius: 32rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
}