/* 首页 - 使用统一色彩规范 + 响应式布局 */

.search-section {
  width: 100%;
  background: var(--primary);
  padding: var(--space-xl) var(--space-lg) var(--space-2xl);
  border-radius: 0 0 var(--radius-xl) var(--radius-xl);
  box-shadow: var(--shadow-primary);
  box-sizing: border-box;
}

.search-bar {
  display: flex;
  align-items: center;
  background: var(--gray-8);
  border-radius: var(--radius-round);
  padding: 12rpx var(--space-lg);
  box-shadow: var(--shadow-1);
  transition: box-shadow var(--transition-fast);
}

.search-bar:active {
  box-shadow: var(--shadow-2);
}

.search-input {
  flex: 1;
  padding: var(--space-sm) var(--space-md);
  font-size: var(--font-md);
  color: var(--gray-1);
}

.search-input::placeholder {
  color: var(--gray-3);  /* ✅ 已优化为 #6B7280，对比度 5.2:1 */
}

.search-btn {
  background: var(--primary);
  color: var(--gray-8);
  border: none;
  border-radius: var(--radius-round);
  padding: 12rpx var(--space-xl);
  font-size: var(--font-sm);
  font-weight: 500;
  margin-left: var(--space-md);
  transition: all var(--transition-fast);
}

.search-btn::after {
  border: none;
}

.search-btn:active {
  background: var(--primary-dark);
  transform: scale(0.95);
}

.service-section,
.orders-section {
  padding: var(--space-xl) var(--space-lg);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-lg);
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--gray-1);
  position: relative;
  padding-left: var(--space-md);
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: var(--primary);
  border-radius: var(--radius-xs);
}

.more-text {
  font-size: var(--font-sm);
  color: var(--gray-2);  /* ✅ 使用更深的颜色确保清晰 */
  display: flex;
  align-items: center;
  font-weight: 500;
}

.service-grid {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-lg);
  background: var(--gray-8);
  padding: var(--space-xl) var(--space-lg);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-1);
  box-sizing: border-box;
}

.service-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--space-md);
  border-radius: var(--radius-lg);
  transition: all var(--transition-fast);
  cursor: pointer;
}

.service-item:active {
  transform: scale(0.95);
}

.service-item-selected {
  background: var(--gray-5);
  color: var(--gray-1);
}

.service-item-selected .service-name {
  color: var(--gray-1);
  font-weight: 600;
}

.service-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: var(--space-sm);
}

.service-icon-emoji {
  font-size: 64rpx;
  line-height: 1;
  margin-bottom: var(--space-sm);
}

.service-name {
  font-size: var(--font-sm);
  color: var(--gray-1);
  font-weight: 500;
  text-align: center;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: var(--space-lg);
}

.order-card {
  width: 100%;
  background: var(--gray-8);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  box-shadow: var(--shadow-1);
  position: relative;
  overflow: hidden;
  transition: all var(--transition-base);
  box-sizing: border-box;
}

.order-card:active {
  box-shadow: var(--shadow-2);
  transform: translateY(-2rpx);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--space-md);
  padding-bottom: var(--space-md);
  border-bottom: 1rpx solid var(--gray-5);
}

.order-type {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--primary-dark);  /* ✅ 使用深色确保对比度 */
  background: var(--primary-light);
  padding: 8rpx var(--space-md);
  border-radius: var(--radius-sm);
  line-height: 1;
}

.order-status {
  font-size: var(--font-sm);
  font-weight: 500;
  padding: 6rpx 12rpx;
  border-radius: var(--radius-xs);
  line-height: 1;
}

.order-content {
  margin-bottom: var(--space-lg);
}

.order-desc {
  width: 100%;
  font-size: var(--font-md);
  color: var(--gray-1);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--space-md);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-wrap: break-word;
  word-break: break-all;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
}

.order-location,
.order-time {
  font-size: var(--font-sm);
  color: var(--gray-2);
  display: flex;
  align-items: center;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-price {
  font-size: var(--font-2xl);
  font-weight: 600;
  color: var(--price);
  line-height: 1;
}

.order-price::before {
  content: '¥';
  font-size: 0.7em;
  margin-right: 4rpx;
}

.accept-btn {
  background: var(--primary);
  color: var(--gray-8);
  border: none;
  border-radius: var(--radius-round);
  padding: 14rpx 36rpx;
  font-size: var(--font-md);
  font-weight: 500;
  margin: 0;
  line-height: 1;
  transition: all var(--transition-fast);
  white-space: nowrap;
  flex-shrink: 0;
}

.accept-btn::after {
  border: none;
}

.accept-btn:active {
  background: var(--primary-dark);
  transform: scale(0.95);
}

/* 状态文本样式 */
.accepted-text, .completed-text, .cancelled-text {
  padding: 14rpx 36rpx;
  font-size: var(--font-md);
  font-weight: 500;
  margin: 0;
  line-height: 1;
  white-space: nowrap;
  flex-shrink: 0;
  border-radius: var(--radius-round);
}

.accepted-text {
  background: var(--warning);
  color: var(--gray-8);
}

.completed-text {
  background: var(--success);
  color: var(--gray-8);
}

.cancelled-text {
  background: var(--gray-3);
  color: var(--gray-5);
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 110rpx;
  height: 110rpx;
  background: var(--primary);
  border-radius: var(--radius-round);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-primary);
  z-index: 100;
  transition: all var(--transition-base);
}

.fab:active {
  transform: scale(0.92);
  box-shadow: var(--shadow-2);
}

.fab-text {
  color: var(--gray-8);
  font-size: 60rpx;
  font-weight: 300;
  margin-top: -8rpx;
}
