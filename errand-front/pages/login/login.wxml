<view class="login-container">
  <view class="login-header">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <text class="app-name">校园跑腿</text>
    <text class="slogan">让校园生活更便捷</text>
  </view>

  <view class="login-content">
    <view class="form-container">
      <view class="form-item">
        <input 
          class="form-input" 
          placeholder="请输入用户名" 
          value="{{username}}"
          bindinput="onUsernameInput"
        />
      </view>
      
      <view class="form-item">
        <input 
          class="form-input" 
          placeholder="请输入密码" 
          password="{{true}}"
          value="{{password}}"
          bindinput="onPasswordInput"
        />
      </view>
      
      <view class="form-item" wx:if="{{isRegisterMode}}">
        <input 
          class="form-input" 
          placeholder="请确认密码" 
          password="{{true}}"
          value="{{confirmPassword}}"
          bindinput="onConfirmPasswordInput"
        />
      </view>
    </view>

    <button 
      class="login-btn" 
      type="primary" 
      bindtap="{{isRegisterMode ? 'onRegister' : 'onAccountLogin'}}"
    >
      <text class="btn-text">{{isRegisterMode ? '注册' : '登录'}}</text>
    </button>

    <view class="switch-mode" bindtap="toggleMode">
      <text class="switch-text">{{isRegisterMode ? '已有账号？去登录' : '没有账号？去注册'}}</text>
    </view>

    <view class="divider">
      <view class="divider-line"></view>
      <text class="divider-text">或</text>
      <view class="divider-line"></view>
    </view>

    <!-- 微信一键登录 -->
    <button 
      class="wechat-login-btn" 
      bindtap="onWechatLogin"
    >
      <text class="wechat-btn-text">💬 微信一键登录</text>
    </button>

    <button class="test-login-btn" bindtap="onTestLogin">
      <text class="test-btn-text">使用测试账号登录</text>
    </button>
    
    <view class="tips">
      <text class="tip-text">点击登录即表示同意</text>
      <text class="link">《用户协议》</text>
      <text class="tip-text">和</text>
      <text class="link">《隐私政策》</text>
    </view>
  </view>
</view>
