.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.login-header {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.slogan {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  width: 100%;
  max-width: 600rpx;
}

.login-btn {
  width: 100%;
  height: 90rpx;
  background: #fff;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.login-btn::after {
  border: none;
}

.profile-btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
}

.btn-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
}

.login-footer {
  position: fixed;
  bottom: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.link {
  color: #fff;
  text-decoration: underline;
}
