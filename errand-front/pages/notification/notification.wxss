.notification-container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  font-size: 28rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
}

.notification-list {
  padding: 20rpx;
}

.notification-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.notification-item.unread {
  background: #f0f4ff;
  border-left: 4rpx solid #667eea;
}

.notification-content {
  flex: 1;
}

.notification-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.notification-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.unread-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ff4444;
  border-radius: 50%;
  margin-left: 10rpx;
}

.notification-body {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.notification-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.notification-time {
  font-size: 24rpx;
  color: #999;
}

.notification-type {
  font-size: 24rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.notification-actions {
  margin-left: 20rpx;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
}

.delete-btn .icon {
  font-size: 32rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.loading-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}
