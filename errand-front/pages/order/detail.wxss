.container {
  min-height: 100vh;
  background: var(--gray-6);
  padding-bottom: 140rpx;
}

.detail-container {
  padding: var(--space-lg);
}

/* Áä∂ÊÄÅÂç°Áâá */
.status-card {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  border-radius: var(--radius-xl);
  padding: var(--space-3xl) var(--space-xl);
  text-align: center;
  color: var(--gray-8);
  margin-bottom: var(--space-lg);
  box-shadow: var(--shadow-primary);
  position: relative;
  overflow: hidden;
}

.status-card::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  animation: float 6s ease-in-out infinite;
}

.status-decoration {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(255,255,255,0.1);
  border-radius: 50%;
  animation: pulse 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  50% { transform: translateY(-20rpx) rotate(180deg); }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 0.3; }
  50% { transform: scale(1.2); opacity: 0.1; }
}

.status-icon {
  font-size: 120rpx;
  margin-bottom: var(--space-lg);
  position: relative;
  z-index: 1;
  filter: drop-shadow(0 4rpx 8rpx rgba(0,0,0,0.2));
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10rpx); }
}

.status-text {
  font-size: var(--font-2xl);
  font-weight: 600;
  margin-bottom: var(--space-sm);
  position: relative;
  z-index: 1;
}

.status-desc {
  font-size: var(--font-sm);
  opacity: 0.8;
  margin-bottom: var(--space-md);
  position: relative;
  z-index: 1;
  font-style: italic;
}

.status-time {
  font-size: var(--font-sm);
  opacity: 0.7;
  position: relative;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-time::before {
  content: 'üìÖ';
  margin-right: var(--space-sm);
}

/* ‰ø°ÊÅØÂç°Áâá */
.info-card,
.images-card,
.user-card,
.time-card {
  background: var(--gray-8);
  border-radius: var(--radius-xl);
  padding: var(--space-xl);
  margin-bottom: var(--space-lg);
  box-shadow: var(--shadow-1);
  transition: all var(--transition-base);
}

.info-card:hover,
.images-card:hover,
.user-card:hover,
.time-card:hover {
  box-shadow: var(--shadow-2);
  transform: translateY(-2rpx);
}

.card-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--gray-1);
  margin-bottom: var(--space-xl);
  padding-bottom: var(--space-lg);
  border-bottom: 2rpx solid var(--gray-5);
  position: relative;
  padding-left: var(--space-md);
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: var(--primary);
  border-radius: var(--radius-xs);
}

.info-row {
  display: flex;
  margin-bottom: var(--space-lg);
  font-size: var(--font-md);
  align-items: flex-start;
  transition: all var(--transition-fast);
}

.info-row:hover {
  background: var(--gray-6);
  padding: var(--space-sm) var(--space-md);
  margin: 0 calc(-1 * var(--space-md)) var(--space-lg) calc(-1 * var(--space-md));
  border-radius: var(--radius-md);
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 200rpx;
  color: var(--gray-2);
  flex-shrink: 0;
  font-weight: 500;
}

.info-value {
  flex: 1;
  color: var(--gray-1);
  word-break: break-all;
  line-height: var(--line-height-relaxed);
}

.info-value.phone {
  color: var(--primary);
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 500;
  transition: all var(--transition-fast);
}

.info-value.phone:hover {
  color: var(--primary-dark);
  transform: translateX(4rpx);
}

.call-icon {
  margin-left: var(--space-sm);
  font-size: var(--font-lg);
  transition: transform var(--transition-fast);
}

.info-value.phone:hover .call-icon {
  transform: scale(1.2);
}

.price-row {
  margin-top: var(--space-xl);
  padding-top: var(--space-xl);
  border-top: 2rpx solid var(--gray-5);
  background: linear-gradient(135deg, var(--gray-6) 0%, var(--gray-7) 100%);
  margin: 0 calc(-1 * var(--space-xl)) calc(-1 * var(--space-xl)) calc(-1 * var(--space-xl));
  padding: var(--space-xl);
  border-radius: 0 0 var(--radius-xl) var(--radius-xl);
}

.info-value.price {
  color: var(--price);
  font-size: var(--font-3xl);
  font-weight: 700;
  text-shadow: 0 2rpx 4rpx rgba(255, 123, 53, 0.2);
}

/* ÂõæÁâáÁΩëÊ†º */
.images-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: var(--space-md);
}

.order-image {
  width: 100%;
  height: 200rpx;
  border-radius: var(--radius-lg);
  transition: all var(--transition-base);
  box-shadow: var(--shadow-1);
}

.order-image:hover {
  transform: scale(1.05);
  box-shadow: var(--shadow-2);
}

/* Áî®Êà∑‰ø°ÊÅØ */
.user-info {
  display: flex;
  align-items: center;
  padding: var(--space-lg);
  background: var(--gray-6);
  border-radius: var(--radius-lg);
  transition: all var(--transition-base);
}

.user-info:hover {
  background: var(--gray-5);
  transform: translateY(-2rpx);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: var(--space-lg);
  border: 4rpx solid var(--primary-light);
  box-shadow: var(--shadow-1);
  transition: all var(--transition-base);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background: var(--gray-5);
}

.user-avatar:hover {
  border-color: var(--primary);
  transform: scale(1.1);
}

.user-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary) 100%);
}

.avatar-icon {
  font-size: 60rpx;
  color: var(--gray-8);
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: var(--font-lg);
  color: var(--gray-1);
  margin-bottom: var(--space-sm);
  font-weight: 600;
}

.user-phone {
  font-size: var(--font-md);
  color: var(--primary);
  padding: var(--space-sm) var(--space-lg);
  background: var(--primary-light);
  border-radius: var(--radius-round);
  display: inline-block;
  transition: all var(--transition-fast);
  font-weight: 500;
}

.user-phone:hover {
  background: var(--primary);
  color: var(--gray-8);
  transform: translateY(-2rpx);
}

/* Êó∂Èó¥‰ø°ÊÅØ */
.time-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: var(--space-lg);
  font-size: var(--font-md);
  padding: var(--space-sm) var(--space-md);
  border-radius: var(--radius-md);
  transition: all var(--transition-fast);
}

.time-item:hover {
  background: var(--gray-6);
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  color: var(--gray-2);
  font-weight: 500;
}

.time-value {
  color: var(--gray-1);
  font-weight: 500;
}

/* Â∫ïÈÉ®Êìç‰ΩúÊåâÈíÆ */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--gray-8);
  padding: var(--space-lg);
  box-shadow: var(--shadow-up);
  display: flex;
  gap: var(--space-md);
  border-top: 1rpx solid var(--gray-5);
}

.action-btn {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: var(--radius-round);
  font-size: var(--font-lg);
  border: none;
  font-weight: 500;
  transition: all var(--transition-base);
  box-shadow: var(--shadow-1);
  position: relative;
  overflow: hidden;
}

.action-btn::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.action-btn:active::before {
  width: 300rpx;
  height: 300rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
  color: var(--gray-8);
}

.action-btn.success {
  background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);
  color: var(--gray-8);
}

.action-btn.cancel {
  background: linear-gradient(135deg, var(--price) 0%, #ff5722 100%);
  color: var(--gray-8);
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-2);
}

/* Âä†ËΩΩ‰∏≠ */
.loading {
  text-align: center;
  padding: var(--space-3xl) 0;
  color: var(--gray-2);
  font-size: var(--font-lg);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading::before {
  content: '‚è≥';
  font-size: 80rpx;
  margin-bottom: var(--space-lg);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.6; transform: scale(0.95); }
}

/* ÂèñÊ∂àËØ∑Ê±ÇÂç°Áâá */
.cancel-request-card {
  background: var(--gray-8);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  margin-bottom: var(--space-lg);
  border-left: 6rpx solid var(--warning);
  box-shadow: var(--shadow-sm);
}

.cancel-request-content {
  margin-top: var(--space-md);
}

.cancel-request-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: var(--space-lg);
}

.cancel-request-icon {
  font-size: 60rpx;
  margin-right: var(--space-md);
  flex-shrink: 0;
}

.cancel-request-text {
  flex: 1;
}

.cancel-request-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--gray-1);
  margin-bottom: var(--space-sm);
}

.cancel-request-reason {
  font-size: var(--font-md);
  color: var(--gray-3);
  line-height: 1.6;
}

.cancel-request-actions {
  display: flex;
  gap: var(--space-md);
}

.cancel-request-btn {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-md);
  font-size: var(--font-md);
  font-weight: 600;
  border: none;
}

.cancel-request-btn.agree {
  background: var(--success);
  color: var(--gray-8);
}

.cancel-request-btn.reject {
  background: var(--gray-6);
  color: var(--gray-2);
}

.cancel-request-waiting {
  text-align: center;
  padding: var(--space-lg);
  color: var(--gray-4);
  font-size: var(--font-md);
}

/* ËÅäÂ§©ÊåâÈíÆÊ†∑Âºè */
.action-btn.chat {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: var(--gray-8);
}

.action-btn.warning {
  background: var(--warning);
  color: var(--gray-8);
}

/* ÂæÖÁ°ÆËÆ§ÂÆåÊàêÂç°Áâá */
.completing-card {
  background: var(--gray-8);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  margin-bottom: var(--space-lg);
  border-left: 6rpx solid var(--primary);
  box-shadow: var(--shadow-sm);
}

.completing-content {
  margin-top: var(--space-md);
}

.completing-info {
  display: flex;
  align-items: flex-start;
}

.completing-icon {
  font-size: 60rpx;
  margin-right: var(--space-md);
  flex-shrink: 0;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.completing-text {
  flex: 1;
}

.completing-title {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--gray-1);
  margin-bottom: var(--space-sm);
}

.completing-desc {
  font-size: var(--font-md);
  color: var(--gray-3);
  line-height: 1.6;
}
