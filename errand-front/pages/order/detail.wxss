/* 订单详情页面样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

.detail-container {
  padding: 20rpx;
}

/* 状态卡片 */
.status-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
  margin-bottom: 20rpx;
}

.status-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-time {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 信息卡片 */
.info-card,
.images-card,
.user-card,
.time-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.info-row {
  display: flex;
  margin-bottom: 25rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 180rpx;
  color: #999;
  flex-shrink: 0;
}

.info-value {
  flex: 1;
  color: #333;
  word-break: break-all;
}

.info-value.phone {
  color: #007aff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.call-icon {
  margin-left: 10rpx;
}

.price-row {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.info-value.price {
  color: #ff6b35;
  font-size: 36rpx;
  font-weight: bold;
}

/* 图片网格 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.order-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

/* 用户信息 */
.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.user-phone {
  font-size: 28rpx;
  color: #007aff;
}

/* 时间信息 */
.time-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-label {
  color: #999;
}

.time-value {
  color: #333;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  font-size: 32rpx;
  border: none;
}

.action-btn.primary {
  background: #007aff;
  color: white;
}

.action-btn.success {
  background: #4caf50;
  color: white;
}

.action-btn.cancel {
  background: #ff6b35;
  color: white;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
