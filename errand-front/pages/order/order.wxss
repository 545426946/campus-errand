/* 订单页面 - 使用统一色彩规范 + 响应式布局 */

.tab-section {
  width: 100%;
  background: var(--gray-8);
  padding: var(--space-lg);
  border-bottom: 1rpx solid var(--gray-5);
  position: sticky;
  top: 0;
  z-index: 10;
  box-sizing: border-box;
}

.tab-bar {
  width: 100%;
  display: flex;
  background: var(--gray-6);
  border-radius: var(--radius-round);
  padding: 6rpx;
  box-sizing: border-box;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--space-md);
  font-size: var(--font-md);
  color: var(--gray-2);
  border-radius: var(--radius-round);
  transition: all var(--transition-fast);
  font-weight: 500;
  white-space: nowrap;
  min-width: 120rpx;
}

.tab-item.active {
  background: var(--primary);
  color: var(--gray-8);
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx var(--primary-shadow);
}

.order-list {
  padding: var(--space-lg);
  min-height: 60vh;
}

.order-card {
  width: 100%;
  background: var(--gray-8);
  border-radius: var(--radius-lg);
  padding: var(--space-xl);
  margin-bottom: var(--space-lg);
  box-shadow: var(--shadow-1);
  transition: all var(--transition-base);
  box-sizing: border-box;
}

.order-card:active {
  box-shadow: var(--shadow-2);
  transform: translateY(-2rpx);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: var(--space-md);
}

.order-type-info {
  display: flex;
  flex-direction: column;
  gap: var(--space-xs);
}

.order-type {
  font-size: var(--font-lg);
  font-weight: 600;
  color: var(--gray-1);
}

.order-id {
  font-size: var(--font-xs);
  color: var(--gray-3);
}

.order-content {
  margin-bottom: var(--space-xl);
}

.order-desc {
  width: 100%;
  font-size: var(--font-md);
  color: var(--gray-1);
  line-height: var(--line-height-relaxed);
  margin-bottom: var(--space-md);
  word-wrap: break-word;
  word-break: break-all;
}

.order-details {
  display: flex;
  flex-direction: column;
  gap: var(--space-sm);
  background: var(--gray-6);
  padding: var(--space-md);
  border-radius: var(--radius-sm);
}

.detail-item {
  display: flex;
  align-items: center;
}

.detail-label {
  font-size: var(--font-sm);
  color: var(--gray-2);
  width: 140rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: var(--font-sm);
  color: var(--gray-1);
  flex: 1;
  word-wrap: break-word;
  word-break: break-all;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price-info {
  display: flex;
  align-items: baseline;
  gap: var(--space-sm);
}

.price {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--price);
  line-height: 1;
}

.price::before {
  content: '¥';
  font-size: 0.7em;
  margin-right: 4rpx;
}

.tip {
  font-size: var(--font-xs);
  color: var(--warning-dark);  /* ✅ 使用深色确保对比度 */
  background: var(--warning-light);
  padding: 6rpx var(--space-xs);
  border-radius: var(--radius-xs);
  font-weight: 600;
}

.order-actions {
  display: flex;
  gap: var(--space-sm);
  flex-wrap: wrap;
}

.action-btn {
  border: none;
  border-radius: var(--radius-round);
  padding: 12rpx var(--space-lg);
  font-size: var(--font-sm);
  font-weight: 500;
  transition: all var(--transition-fast);
  line-height: 1;
  white-space: nowrap;
  flex-shrink: 0;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.95);
}

.accept-btn {
  background: var(--success);
  color: var(--gray-8);
}

.accept-btn:active {
  background: #009922;
}

.cancel-btn {
  background: var(--error);
  color: var(--gray-8);
}

.cancel-btn:active {
  background: #E02020;
}

.complete-btn {
  background: var(--primary);
  color: var(--gray-8);
}

.complete-btn:active {
  background: var(--primary-dark);
}

.finish-btn {
  background: var(--warning);
  color: var(--gray-8);
}

.finish-btn:active {
  background: #E67000;
}

.detail-btn {
  background: var(--gray-6);
  color: var(--gray-2);
}

.detail-btn:active {
  background: var(--gray-5);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx var(--space-lg);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: var(--space-xl);
  opacity: 0.3;
}

.empty-text {
  font-size: var(--font-md);
  color: var(--gray-2);  /* ✅ 使用更深的颜色确保清晰 */
  font-weight: 500;
}
