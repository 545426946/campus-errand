/* 个人信息页面样式 */
.page-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 100rpx;
}

/* 页面标题栏 */
.page-header {
  background-color: #007aff;
  padding: 20rpx 30rpx;
  text-align: center;
}

.page-title {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

/* 头像区域 */
.avatar-section {
  display: flex;
  justify-content: center;
  padding: 60rpx 0 40rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

.avatar-container {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #e5e5e5;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  color: white;
  padding: 20rpx 0;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.edit-icon {
  font-size: 24rpx;
  margin-bottom: 4rpx;
}

.edit-text {
  font-size: 20rpx;
}

/* 表单区域 */
.form-section {
  background-color: white;
  padding: 0 30rpx;
}

.form-group {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-group:last-child {
  border-bottom: none;
}

/* 性别选择需要保留标签 */
.gender-group {
  padding: 30rpx 0;
}

.gender-group .form-label {
  display: block;
  color: #333;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #999;
  font-size: 26rpx;
}

.form-input:focus {
  border-color: #007aff;
  background-color: white;
}

.form-input[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  resize: none;
}

.form-textarea::placeholder {
  color: #999;
  font-size: 26rpx;
}

.form-textarea:focus {
  border-color: #007aff;
  background-color: white;
}

.char-count {
  text-align: right;
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
  display: block;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 20rpx;
  border: 1rpx solid #e5e5e5;
  border-radius: 20rpx;
  background-color: #fafafa;
  cursor: pointer;
}

.radio-item.selected {
  border-color: #007aff;
  background-color: #e6f2ff;
}

.radio {
  transform: scale(0.8);
}

.radio-label {
  font-size: 28rpx;
  color: #333;
}

/* 操作按钮区域 */
.action-section {
  padding: 60rpx 30rpx 0;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  background-color: #0056cc;
}

.save-btn[disabled] {
  background-color: #ccc;
  color: #999;
}