/* 用户中心页面 - 使用统一色彩规范 */

.page-container {
  min-height: 100vh;
  background: var(--gray-7);
}

.user-header {
  background: var(--gradient-primary);
  padding: 60rpx var(--space-xl) var(--space-xl);
  display: flex;
  align-items: center;
  color: var(--gray-8);
  position: relative;
}

.user-avatar-section {
  position: relative;
  margin-right: var(--space-lg);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-round);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.login-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border-radius: var(--radius-round);
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
}

.login-text {
  font-size: var(--font-sm);
  color: var(--gray-8);
  font-weight: 500;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: var(--space-sm);
  display: block;
  color: var(--gray-8);
}

.user-stats {
  display: flex;
  align-items: center;
  gap: var(--space-md);
  margin-bottom: var(--space-xs);
}

.stat-item {
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.95);  /* ✅ 提升不透明度确保清晰 */
  font-weight: 500;
}

.stat-divider {
  font-size: var(--font-sm);
  color: rgba(255, 255, 255, 0.5);
}

.user-id {
  margin-top: var(--space-xs);
}

.id-text {
  font-size: var(--font-xs);
  color: rgba(255, 255, 255, 0.85);  /* ✅ 提升不透明度确保清晰 */
}

.setting-btn {
  padding: var(--space-sm);
  font-size: 40rpx;
  opacity: 0.9;
}

.menu-section {
  padding: var(--space-lg);
}

.menu-group {
  background: var(--gray-8);
  border-radius: var(--radius-lg);
  margin-bottom: var(--space-lg);
  overflow: hidden;
  box-shadow: var(--shadow-1);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-lg) var(--space-xl);
  border-bottom: 1rpx solid var(--gray-5);
  transition: background var(--transition-fast);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--gray-6);
}

.menu-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: var(--space-lg);
  width: 40rpx;
  text-align: center;
}

.menu-title {
  font-size: var(--font-lg);
  color: var(--gray-1);
  font-weight: 500;
}

.menu-right {
  display: flex;
  align-items: center;
  gap: var(--space-sm);
}

.menu-count {
  background: var(--error);
  color: var(--gray-8);
  font-size: var(--font-xs);
  padding: 6rpx 12rpx;
  border-radius: var(--radius-round);
  min-width: 32rpx;
  text-align: center;
  font-weight: 600;
  line-height: 1;
}

.menu-value {
  font-size: var(--font-lg);
  color: var(--price);
  font-weight: 600;
}

.cert-status {
  font-size: var(--font-sm);
  padding: 6rpx 12rpx;
  border-radius: var(--radius-xs);
  font-weight: 500;
}

.cert-status.verified {
  background: var(--success-light);
  color: var(--success-dark);  /* ✅ 使用深色确保对比度 */
}

.cert-status.unverified {
  background: var(--warning-light);
  color: var(--warning-dark);  /* ✅ 使用深色确保对比度 */
}

.menu-arrow {
  font-size: var(--font-lg);
  color: var(--gray-3);
}

.action-section {
  padding: var(--space-xl) var(--space-lg);
}

.logout-btn {
  background: var(--error);
  color: var(--gray-8);
  border: none;
  border-radius: var(--radius-round);
  padding: var(--space-lg);
  font-size: var(--font-lg);
  font-weight: 500;
  width: 100%;
  transition: all var(--transition-fast);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  background: #E02020;
  transform: scale(0.98);
}

.version-info {
  text-align: center;
  padding: var(--space-xl) var(--space-lg) var(--space-2xl);
}

.version-text {
  font-size: var(--font-xs);
  color: var(--gray-3);
}
